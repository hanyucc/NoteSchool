<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ranking_text"
                android:text="1"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_centerVertical="true"
                android:textSize="16sp" />

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/avatar_view_rank"
                android:layout_toEndOf="@id/ranking_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_small"/>

            <TextView
                android:id="@+id/user_name_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="部分文章"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_toEndOf="@id/avatar_view_rank"/>

            <TextView
                android:id="@+id/point_text"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="分"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal" />

            <TextView
                android:id="@+id/point_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/point_text"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="2333"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_small" />

        </RelativeLayout>

</LinearLayout>
